int precio = 0;
Console.WriteLine("MAQUINA EXPENDEDORA");
Console.WriteLine("\n1.Snacks");
Console.WriteLine("2.Bebidas");
Console.WriteLine("3.Dulces");
Console.WriteLine("\nElija una opción");
int opcion = int.Parse(Console.ReadLine());
switch (opcion){
case 1: 
Console.WriteLine("Ha elegido snacks:");
Console.WriteLine("\na.Papas(s/.5)");
Console.WriteLine("b.Galletas(s/.4)");
Console.WriteLine("\nElija un producto:");
string snack = Console.ReadLine();
if (snack =="a") precio =5;
else if (snack == "b") precio =4;
else {
Console.WriteLine("Producto invalido en snacks.");
break;



case 2: // Bebidas 
Console.WriteLine("Ha elegido Bebidas:");
Console.WriteLine("a. Agua (S/.2");
Console.WriteLine("b. Gaseosa (S/3););
Console.Write("elija un producto: ");
string bebida =
Console.ReadLine();
if (bebida == "b")
precio = 3;
else
Console.WriteLine("Producto invalido en Bebidas.");
break;

case 3: // Dulces
Console.WriteLine("Ha elegido Dulces:");
Console.WriteLine("a. Chocolate (S/.6)");
Console.WriteLine("b. Caramelos (S/.2)");
Console.Write("Elija un producto: ");
string dulce = Console.ReadLine();
if (dulce == "a")
{
precio = 6;
}
else if (dulce == "b")
{
precio = 2;
}else
{
Console.WriteLine("Producto inválido en Dulces.");
break;
}
    
if (precio > 0)
{
Console.WriteLine("\nDebe pagar: S/." + precio);
}
    
Console.WriteLine("\nGracias por su compra.");
break;

CASO 3: // Dulces
    Mostrar submenú:
        a. Chocolate (S/.6)
        b. Caramelos (S/.2)

    Leer elección (producto)

    SI producto == "a" ENTONCES
        precio = 6
    SINO SI producto == "b" ENTONCES
        precio = 2
    SINO
        Mostrar "Producto inválido"
    FIN SI
FIN CASO

DEFAULT:
    Mostrar "Opción inválida del menú principal"
FIN SWITCH
